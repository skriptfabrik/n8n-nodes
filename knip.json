{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["tools/scripts/*.mjs"],
      "ignore": ["packages/*/release.config.mjs"],
      "ignoreDependencies": [
        "@semantic-release/changelog",
        "@semantic-release/exec"
      ]
    },
    "packages/*": {
      "entry": ["**/*.{credentials,node}.ts"],
      "ignore": ["**/*.d.ts"]
    }
  }
}
