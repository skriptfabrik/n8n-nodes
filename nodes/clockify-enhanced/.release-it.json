{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "changelog": "auto-changelog --unreleased-only --stdout",
    "commitMessage": "chore(release): clockify-enhanced-${version}",
    "tagAnnotation": "chore(release): clockify-enhanced-${version}",
    "tagName": "clockify-enhanced-${version}",
    "requireCleanWorkingDir": false,
    "requireCommits": true
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": "turbo build",
    "after:bump": "auto-changelog --package"
  }
}
